    <div id="errorModal" class="modal" style="display: none;">
        <div class="modal-content">
            <span class="close">&times;</span>
            <p id="errorMessage"></p>
        </div>
    </div>

    <style>
        /* Modal styles */
        .modal {
            display: none;
            position: fixed;
            z-index: 1000;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            overflow: auto;
            background-color: rgba(0, 0, 0, 0.5);
        }

        .modal-content {
            background-color: #fff;
            margin: 15% auto;
            padding: 20px;
            border: 1px solid #888;
            width: 80%;
            max-width: 500px;
            border-radius: 8px;
            text-align: center;
        }

        .close {
            color: #aaa;
            float: right;
            font-size: 28px;
            font-weight: bold;
            cursor: pointer;
        }

            .close:hover {
                color: #000;
            }
    </style>

    <script>
        // Function to show the modal with an error message
        function showErrorModal(message) {
            document.getElementById('errorMessage').textContent = message;
            document.getElementById('errorModal').style.display = 'block';
        }

        // Function to close the modal
        function closeErrorModal() {
            document.getElementById('errorModal').style.display = 'none';
        }

        // Close the modal when the user clicks on the close button
        document.querySelector('.close').addEventListener('click', closeErrorModal);

        // Close the modal when the user clicks outside of it
        window.onclick = function (event) {
            if (event.target === document.getElementById('errorModal')) {
                closeErrorModal();
            }
        };

        // Check for TempData error messages and display them in the modal
        document.addEventListener('DOMContentLoaded', function () {
        @if (TempData["ErrorMessage"] != null)
        {
            <text>
                    showErrorModal('@TempData["ErrorMessage"]');
            </text>
        }
                });

        // Handle waiting list popup from TempData
        @if (TempData["ShowWaitingListPopup"] != null && (bool)TempData["ShowWaitingListPopup"])
        {
            <text>
                                const userResponse = confirm("This book is not available for borrowing at the moment. Do you want to enter the waiting list?");
            if (userResponse) {
                // User clicked "OK", redirect to join the waiting list
                window.location.href = `/Book/JoinWaitingList?bookId=@TempData["BookId"]`;
            } else {
                // User clicked "Cancel", redirect back to book list
                window.location.href = "/Book/UserIndex";
            }
            </text>
        }
    </script>
